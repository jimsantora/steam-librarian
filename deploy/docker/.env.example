# Steam API Configuration
STEAM_ID=your_steam_id_here
STEAM_API_KEY=your_steam_api_key_here

# Optional: Database configuration (defaults to /data/steam_library.db in container)
# DATABASE_URL=sqlite:////data/steam_library.db

# Optional: MCP Server configuration
# HOST=0.0.0.0
# PORT=8000
# DEBUG=false
# LOG_LEVEL=INFO

# Optional: Caching configuration
# ENABLE_CACHE=true
# CACHE_TTL=3600
# CACHE_TTL_SEARCH=900
# CACHE_TTL_RECOMMENDATIONS=3600
# CACHE_MAX_SIZE=1000

# Optional: Feature flags
# ENABLE_NL_SEARCH=true
# ENABLE_RECOMMENDATIONS=true
# ENABLE_FRIENDS_DATA=true

# Optional: Performance settings
# MAX_SEARCH_RESULTS=50
# MAX_RECOMMENDATIONS=10
# REQUEST_TIMEOUT=30

# Optional: Fetcher cache settings
# CACHE_DAYS=7